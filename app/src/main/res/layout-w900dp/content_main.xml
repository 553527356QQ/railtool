<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/main_bg"
             android:orientation="vertical"
             tools:context="com.commonrail.mtf.activity.MainActivity">
    <!--android:background="@android:color/transparent"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.commonrail.mtf.activity.MainActivity"
        tools:showIn="@layout/app_bar_main"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="82dp"
            android:layout_marginRight="88dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:shadowColor="@color/black4"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="欢迎使用共轨之家喷油器智能精密维修系统"
            android:textColor="@color/md_white"
            android:textSize="48dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="420dp"
                    android:layout_height="403dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="36dp"
                    android:layout_marginLeft="68dp"
                    android:layout_marginRight="104dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <include layout="@layout/left_tips"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="620dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="68dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="620dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/dv_whitea_shape_bg"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="请选择厂商"
                        android:textColor="@color/black2"
                        android:textSize="16dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/item_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="28dp"
                        app:layoutManager="GridLayoutManager"
                        app:spanCount="3"/>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/callFb"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/fb"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="021-311033839"
            android:textColor="@color/md_white"
            android:textSize="24dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:layout_marginRight="88dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="上海星融汽车科技有限公司@2016"
                android:textColor="@color/md_white"
                android:textSize="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Shanghai Shineroad Automotive Technology Co.Ltd"
                android:textColor="@color/md_white"
                android:textSize="17dp"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>



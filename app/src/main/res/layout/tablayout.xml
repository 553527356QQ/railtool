<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/type2Line"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="568dp"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="568dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/dv_grey_shape_bg"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="建议拧紧力柜"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"

        />

    <LinearLayout
        android:layout_width="568dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:background="@drawable/dv_grey_no_corner_shape_bg"
                android:gravity="center"
                android:text="角度控制法"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:background="@color/md_white"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/dv_white3_shape_bg"
                        android:gravity="center"
                        android:text="角度"
                        android:textColor="@color/black1"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/dv_white3_shape_bg"
                        android:gravity="center"
                        android:text="门阀值（N.m）"
                        android:textColor="@color/black1"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/dv_white3_shape_bg"
                        android:gravity="center"
                        android:text="力矩（N.m）"
                        android:textColor="@color/black1"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:background="@color/md_white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/angleTv"
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/dv_white3_shape_bg"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/black1"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/mkzTv"
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/dv_white3_shape_bg"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/black1"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/ljfwTv"
                        android:layout_width="136dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/dv_white3_shape_bg"
                        android:gravity="center"
                        android:text="35-65"
                        android:textColor="@color/black1"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="120dp"
            android:layout_marginLeft="18dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:background="@drawable/dv_grey_no_corner_shape_bg"
                android:gravity="center"
                android:text="力柜控制法"
                android:textColor="@color/black"
                android:textSize="16sp"
                />


            <TextView
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dv_white3_shape_bg"
                android:gravity="center"
                android:text="力矩（N.m）"
                android:textColor="@color/black1"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/ljTv"
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dv_white3_shape_bg"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/black1"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>



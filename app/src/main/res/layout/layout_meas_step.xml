<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/type1Line"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    android:layout_height="230dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/dv_white_shape_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/testSpecTv"
        android:layout_width="420dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:background="@drawable/dv_grey_shape_bg"
        android:gravity="left|center_vertical"
        android:maxWidth="400dp"
        android:paddingLeft="8dp"
        android:text="测量步骤及要点"
        android:textColor="@color/colorPrimary"
        android:textSize="14.23dp"
        />

    <TextView
        android:id="@+id/testSpecTv1"
        android:layout_width="420dp"
        android:layout_height="193dp"
        android:maxWidth="460dp"
        android:padding="8dp"
        android:lineSpacingExtra="7dp"
        android:lineSpacingMultiplier="1.0"
        android:text="步骤：❶ 将喷油器体夹持在专用台虎钳上；❷ 依次将阀半球和衔铁插入座孔；"
        android:textColor="@color/black1"
        android:textSize="14.6dp"
        />


</LinearLayout>